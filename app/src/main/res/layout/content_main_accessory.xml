<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/label_switches"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/label_switches"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/label_sections"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView_switches"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/scrollView_sections"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_switches">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/label_sections"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="@string/label_sections"
        app:layout_constraintStart_toStartOf="@id/scrollView_sections"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView_sections"
        android:layout_width="75dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/scrollView_switches"
        app:layout_constraintTop_toBottomOf="@id/label_sections">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.SwitchCompat
