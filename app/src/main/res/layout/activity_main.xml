<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <!--Only one Cab will be visible -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/con1"
        android:tag="c1"
        android:name="com.traincon.modelleisenbahn_controller.ControllerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/con2"
        android:tag="c2"
        android:name="com.traincon.modelleisenbahn_controller.ControllerFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/con3"
        android:tag="c3"
        android:name="com.traincon.modelleisenbahn_controller.ControllerFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <include
        android:id="@+id/accessory"
        layout="@layout/content_main_accessory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/con3"
        app:layout_constraintTop_toTopOf="parent" />


</merge>